<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="#077F7B">

        <ImageView
            android:id="@+id/af"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/hh" />



        <TextView
            android:layout_below="@id/af"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome"
            android:id="@+id/tv_toplog"
            android:textColor="#92CCCCCC"
            android:textSize="25sp"
            android:textStyle="bold|italic"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign in"
            android:id="@+id/tv_login"
            android:textColor="#fff"
            android:textSize="40sp"
            android:textStyle="bold|italic"
            android:layout_below="@id/tv_toplog"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="30dp"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/btm"
            android:layout_below="@id/tv_login"
            android:background="@drawable/white_bg">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_uname"
                android:text="Email"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="40dp"
                android:textColor="#2B2B2B"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/edt_uname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_uname"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="20dp"
                android:hint="Enter Username"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:padding="15dp"
                android:singleLine="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_pwd"
                android:text="Password"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="30dp"
                android:textColor="#2B2B2B"
                android:layout_below="@id/edt_uname"
                />

            <EditText
                android:id="@+id/edt_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_pwd"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="20dp"
                android:hint="Enter Password"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:padding="15dp"
                android:singleLine="true"


                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot Password?"
                android:layout_below="@id/edt_pwd"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"/>

            <android.widget.Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edt_pwd"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="70dp"
                android:background="@drawable/bt_bg"
                android:padding="10dp"
                android:text="sign in"
                android:textColor="#fff"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/btn_signUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_login"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="90dp"
                android:layout_marginTop="70dp"
                android:padding="10dp"
                android:text="  Dont have an account Sign Up"
                android:textColor="#077F7B"
                android:textStyle="normal" />


        </RelativeLayout>
    </RelativeLayout>
</ScrollView>